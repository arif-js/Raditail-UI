{
  "name": "raditail-ui-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "storybook": "pnpm --filter raditail storybook",
    "build-storybook": "pnpm --filter raditail build-storybook",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "changeset": "changeset",
    "version": "pnpm changeset version",
    "release": "pnpm changeset publish",
    "prepare": "husky install || true"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raditail/raditail-ui.git"
  },
  "homepage": "https://raditail.dev",
  "bugs": {
    "url": "https://github.com/raditail/raditail-ui/issues"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
