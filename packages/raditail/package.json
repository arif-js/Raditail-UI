{
  "name": "raditail",
  "version": "0.1.0",
  "description": "A beautiful, accessible React component library built on Radix UI and Tailwind CSS",
  "private": false,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20 <23"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.mjs",
      "require": "./dist/theme/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "tailwindcss",
    "radix-ui",
    "design-system",
    "component-library",
    "accessibility",
    "a11y"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arif-js/Raditail-UI.git",
    "directory": "packages/raditail"
  },
  "homepage": "https://github.com/arif-js/Raditail-UI#readme",
  "bugs": {
    "url": "https://github.com/arif-js/Raditail-UI/issues"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "build": "rimraf dist && tsup && node ./scripts/copy-theme-css.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --config-dir .storybook",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "@radix-ui/react-accordion": "^1.1.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.5",
    "@radix-ui/react-collapsible": "^1.0.5",
    "@radix-ui/react-context-menu": "^2.1.2",
    "@radix-ui/react-dialog": "^1.0.6",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.5",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.5",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle-group": "^1.0.6",
    "@radix-ui/react-tooltip": "^1.0.7",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "tailwindcss": "^3.4.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@radix-ui/react-accordion": "^1.1.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.5",
    "@radix-ui/react-collapsible": "^1.0.5",
    "@radix-ui/react-context-menu": "^2.1.2",
    "@radix-ui/react-dialog": "^1.0.6",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.5",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.0.0",
